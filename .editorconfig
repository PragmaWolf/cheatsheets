# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf

[*.{js,ts,jsx,tsx,html,vue}]
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[*.{json,json5,jsonc}]
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = off
tab_width = 2
trim_trailing_whitespace = true

[*.md]
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = off
tab_width = 2
trim_trailing_whitespace = false

[.*rc]
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = off
tab_width = 2
trim_trailing_whitespace = true

[*.sh]
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true
